{% block body %}
    <div class="modal-header">
        <h5 class="modal-title">{{ idea is defined ? 'Edit Idea: ' ~ idea.title|capitalize : 'New Idea' }}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <!-- Form for adding a new idea -->
            <div class="card">
                <div class="card-body">
                    {{ form_start(form, {'action': form_action, 'method': 'POST'}) }}
                    
                    <div class="mb-3">
                        {{ form_row(form.title) }}
                    </div>
                    
                    <div class="mb-3">
                        {{ form_row(form.description) }}
                    </div>
                    
                    <div class="row g-3 mb-3">
                        <div class="col">
                            {{ form_label(form.tags) }}
                            {{ form_widget(form.tags, { 'attr': {'class': 'form-control', 'multiple': 'multiple', 'size': '10'} }) }}
                        </div>
                        
                        <div class="col">
                            {{ form_label(form.status) }}
                            {{ form_widget(form.status, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_widget(form.save) }}
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
