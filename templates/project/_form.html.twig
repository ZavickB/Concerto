{% block body %}
        <div class="modal-header">
            <h5 class="modal-title">{{ project.title ? 'Edit Project: ' ~ project.title|capitalize : 'New Project' }}</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form, {'action': form_action, 'method': 'POST'}) }}

                        <div class="form-group">
                            {{ form_label(form.title) }}
                            {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.tags) }}
                            {{ form_widget(form.tags, { 'attr': {'class': 'form-control', 'multiple': 'multiple', 'size': '10'} }) }}
                        </div>

                        <div class="form-group mt-2">
                            <button type="submit" class="btn btn-primary">{{ project.title ? 'Update Project' : 'Create Project' }}</button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
